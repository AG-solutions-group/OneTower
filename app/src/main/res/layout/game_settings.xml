<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".GameSettings"
    android:layout_gravity="center_horizontal">
    <data>
        <variable name="updateViewModel" type="com.agsolutions.td.UpdateViewModel"/>
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/marmorregularwindow"
    android:paddingBottom="20dp"
    >


    <TextView
        android:id="@+id/soundMusicTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Music"
        android:textColor="#ffffff"
        android:textSize="@{updateViewModel.textMain}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/soundMusicNumberTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="0"
        android:textColor="#ffffff"
        android:textSize="@{updateViewModel.textMain}"
        app:layout_constraintBottom_toBottomOf="@+id/soundMusicBar"
        app:layout_constraintEnd_toStartOf="@+id/soundMusicBar"
        app:layout_constraintTop_toTopOf="@+id/soundMusicBar" />

    <SeekBar
        android:id="@+id/soundMusicBar"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="48dp"
        android:max="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/soundMusicTV" />

    <TextView
        android:id="@+id/soundEffectsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Sound Effects"
        android:textColor="#ffffff"
        android:textSize="@{updateViewModel.textMain}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/soundMusicBar" />

    <TextView
        android:id="@+id/soundEffectsNumberTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="0"
        android:textColor="#ffffff"
        android:textSize="@{updateViewModel.textMain}"
        app:layout_constraintBottom_toBottomOf="@+id/soundEffectsBar"
        app:layout_constraintEnd_toStartOf="@+id/soundEffectsBar"
        app:layout_constraintTop_toTopOf="@+id/soundEffectsBar" />

    <SeekBar
        android:id="@+id/soundEffectsBar"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="48dp"
        android:max="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/soundEffectsTV" />

    <TextView
        android:id="@+id/hintsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Hints"
        android:textColor="#ffffff"
        android:textSize="@{updateViewModel.textMain}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/soundEffectsBar" />

    <TextView
        android:id="@+id/hintsNumberTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="ON"
        android:textColor="#ffffff"
        android:textSize="@{updateViewModel.textMain}"
        app:layout_constraintBottom_toBottomOf="@+id/hintsBar"
        app:layout_constraintEnd_toStartOf="@+id/hintsBar"
        app:layout_constraintTop_toTopOf="@+id/hintsBar" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/hintsBar"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="48dp"
        android:checked="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hintsTV" />

    <Button
        android:id="@+id/returnBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Okay"
        android:textColor="#ffffff"
        android:textSize="@{updateViewModel.textButton}"
        android:background="@drawable/button_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>