            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            app:layout_constraintBottom_toTopOf="@+id/plusButtonTextMain"
            app:layout_constraintEnd_toStartOf="@+id/minusButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/plusButtonTextNews" />

        <ImageButton
            android:id="@+id/plusButtonTextNews"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toTopOf="@+id/plusButtonTextMain"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toEndOf="@+id/minusButton"
            app:srcCompat="@android:drawable/ic_media_next" />

        <TextView
            android:id="@+id/showTextNewsScaleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Number"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            app:layout_constraintBottom_toTopOf="@+id/plusButtonTextMain"
            app:layout_constraintEnd_toStartOf="@+id/plusButton"
            app:layout_constraintStart_toEndOf="@+id/minusButton"
            app:layout_constraintTop_toTopOf="@+id/plusButtonTextNews" />

        <ImageButton
            android:id="@+id/minusButtonTextNews"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toTopOf="@+id/minusButtonTextMain"
            app:layout_constraintEnd_toStartOf="@+id/plusButton"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@android:drawable/ic_media_previous" />

        <TextView
            android:id="@+id/textStatsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Text Stats"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            app:layout_constraintBottom_toTopOf="@+id/plusButtonTextNews"
            app:layout_constraintEnd_toStartOf="@+id/minusButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/plusButtonTextStats" />

        <ImageButton
            android:id="@+id/plusButtonTextStats"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toTopOf="@+id/plusButtonTextNews"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toEndOf="@+id/minusButton"
            app:srcCompat="@android:drawable/ic_media_next" />

        <TextView
            android:id="@+id/showTextStatsScaleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number"
            android:textSize="12sp"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            app:layout_constraintBottom_toTopOf="@+id/plusButtonTextNews"
            app:layout_constraintEnd_toStartOf="@+id/plusButton"
            app:layout_constraintStart_toEndOf="@+id/minusButton"
            app:layout_constraintTop_toTopOf="@+id/plusButtonTextStats" />

        <ImageButton
            android:id="@+id/minusButtonTextStats"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toTopOf="@+id/minusButtonTextNews"
            app:layout_constraintEnd_toStartOf="@+id/plusButton"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@android:drawable/ic_media_previous" />





    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/constraint2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemSizeMargin"
        android:background="@drawable/marmorrect22">


        <ImageView
            android:id="@+id/bagIV"
            android:layout_gravity="center"
            android:layout_width="@dimen/itemSizeMargin"
            android:layout_height="@dimen/itemSizeMargin"
            app:srcCompat="@drawable/overlaytransparent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            tools:listitem="@layout/item"
            android:background="@drawable/planksvertical2"
            >


        </androidx.recyclerview.widget.RecyclerView>


        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            >


            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveBTN"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:text="SAVE"
                android:textColor="#ffffff"
                app:backgroundTint="@null"
                android:background="@drawable/gamebuttonemptybw"
                />

        </FrameLayout>

    </LinearLayout>

