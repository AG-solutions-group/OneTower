        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/backgroundplankslight"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:elevation="2dp"
            android:background="@drawable/marmorleft"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/fragment"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/dmgTVD"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="4dp"
                android:elevation="1dp"
                android:src="@drawable/swordicon"
                app:layout_constraintBottom_toTopOf="@+id/speedTVD"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/dmgShowTVD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:elevation="1dp"
                android:text="11"
                android:textColor="#ffffff"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/dmgTVD"
                app:layout_constraintStart_toEndOf="@+id/dmgTVD"
                app:layout_constraintTop_toTopOf="@+id/dmgTVD"
                app:layout_constraintVertical_bias="0.714" />

            <ImageView
                android:id="@+id/speedTVD"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="4dp"
                android:elevation="1dp"
                android:src="@drawable/bowicon"
                app:layout_constraintBottom_toTopOf="@+id/xpTVD"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dmgTVD" />

            <TextView
                android:id="@+id/speedShowTVD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:elevation="1dp"
                android:text="11"
                android:textColor="#ffffff"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/speedTVD"
                app:layout_constraintStart_toEndOf="@+id/speedTVD"
                app:layout_constraintTop_toTopOf="@+id/speedTVD" />

            <ImageView
                android:id="@+id/xpTVD"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="4dp"

                android:elevation="1dp"
                android:src="@drawable/goldicon"
                app:layout_constraintBottom_toTopOf="@+id/talentTVD"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/speedTVD" />

            <TextView
                android:id="@+id/xpShowTVD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:elevation="1dp"
                android:text="11"
                android:textColor="#ffffff"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/xpTVD"
